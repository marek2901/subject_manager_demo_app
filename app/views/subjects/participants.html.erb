<%- model_class = Student -%>
<h1>Subject Participants</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:first_name) %></th>
      <th><%= model_class.human_attribute_name(:last_name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>

  <tbody>
    <% @subject.participants.each do |student| %>
    <tr>
      <td><%= link_to student.id, student_path(student) %></td>
      <td><%= student.first_name %></td>
      <td><%= student.last_name %></td>
      <td><%=l student.created_at %></td>
      <td>
        <%= link_to "Unassign",
                    unassing_participant_from_subject_path(id: @subject.id, participant_id: student.id ),
                    :method => :delete,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-xs btn-danger' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
